<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.happytails.ui.main_screen.MainFragment"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_mainFragment_to_addItemFragment"
            app:destination="@id/addItemFragment" />
        <action
            android:id="@+id/action_mainFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_filterPopupFragment"
            app:destination="@id/filterPopupFragment" />
        <action
            android:id="@+id/action_mainFragment_to_updateFragment"
            app:destination="@id/updateFragment" />

    </fragment>

    <fragment
        android:id="@+id/addItemFragment"
        android:name="com.example.happytails.ui.add_dog.AddItemFragment"
        tools:layout="@layout/add_item_fragment">
        <action
            android:id="@+id/action_addItemFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.happytails.ui.details.DetailsFragment"
        tools:layout="@layout/details_fragment" >

    </fragment>

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.happytails.ui.favorite.FavoriteFragment"
        tools:layout="@layout/favorite_fragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.happytails.ui.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.happytails.ui.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/filterPopupFragment"
        android:name="com.example.happytails.ui.filter_popup.FilterPopupFragment"
        android:label="FilterPopupFragment" >
        <action
            android:id="@+id/action_filterPopupFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/updateFragment"
        android:name="com.example.happytails.ui.UpdateFragment"
        android:label="UpdateFragment" />
</navigation>
